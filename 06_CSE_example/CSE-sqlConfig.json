{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {      
                "description": "Prefix for items naming convention"
            }
        },
        "sysAdminUsername": {
            "type": "string",
            "metadata": {      
                "description": "SQL SysAdmin username"
            }
        },
        "sysAdminPassword": {
            "type": "securestring",
            "metadata": {      
                "description": "SQL SysAdmin password"
            }
        },
        "tcpPort": {
            "type": "int",
            "metadata": {      
                "description": "SQL TCP port"
            }
        },
        "maxDop": {
            "type": "int",
            "metadata": {      
                "description": "SQL Max degree of parallelism"
            }
        }
    },
    "variables": {
        "cseBaseUrl": "https://raw.githubusercontent.com/OmegaMadLab/StartingWithArmTemplates/master/06_CSE_example/CSEResources",
        "cseScript": "CSE-sqlConfig.ps1",
        "cseParameters": "[concat('-SysAdminUsername \"', parameters('sysAdminUsername'), '\" -SysAdminPassword \"', parameters('sysAdminPassword'), '\" -TcpPort ', parameters('tcpPort'), ' -MaxDop ', parameters('maxDop'))]"
    },
    "resources": [
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/CseSqlConfig')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "displayName": "CSE-SqlConfig"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.9",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[concat(variables('cseBaseUrl'), '/', variables('cseScript'))]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File .\\', variables('cseScript'), ' ', variables('cseParameters'))]"
                }
            }
        }        
    ]
}