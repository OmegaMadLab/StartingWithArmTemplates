{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {      
                "description": "Prefix for items naming convention"
            }
        },
        "adminUserName": {
            "type": "string",
            "metadata": {      
                "description": "Local and domain admin username"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {      
                "description": "Local and domain admin password"
            }
        },
        "tcpPort": {
            "type": "int",
            "metadata": {      
                "description": "TCP port for SQL Server instance"
            }
        },
        "maxDop": {
            "type": "int",
            "metadata": {      
                "description": "Max DOP for SQL Server instance"
            }
        }
    },
    "variables": {
        "sqlConfigModulesURL": "https://raw.githubusercontent.com/OmegaMadLab/StartingWithArmTemplates/master/05_DSC_example/DSCResources/SqlConfig.ps1.zip",
        "SqlDscConfigScript": "SqlConfig.ps1",
        "SqlDscConfigFunction": "SqlServerConfig"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/SqlConfig')]",
            "apiVersion": "2019-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.9",
                "autoUpgradeMinorVersion": false,
                "settings": {
                    "configuration": {
                        "url": "[variables('sqlConfigModulesURL')]",
                        "script": "[variables('SqlDscConfigScript')]",
                        "function": "[variables('SqlDscConfigFunction')]"
                    },
                    "configurationArguments": {
                        "MaxDop": "[parameters('maxDop')]",
                        "TcpPort": "[parameters('tcpPort')]"
                    }
                },
                "protectedSettings": {
                    "configurationArguments": {
                        "SysAdminCreds": {
                            "userName": "[parameters('adminUserName')]",
                            "Password": "[parameters('adminPassword')]"
                        }
                    }
                }
            }
        }
    ]
}