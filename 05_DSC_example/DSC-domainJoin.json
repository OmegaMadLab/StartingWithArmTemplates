{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {      
                "description": "Prefix for items naming convention"
            }
        },
        "adminUserName": {
            "type": "string",
            "metadata": {      
                "description": "Local and domain admin username"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {      
                "description": "Local and domain admin password"
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "AD domain name"
            }
        }
    },
    "variables": {
        "adJoinModulesURL": "https://raw.githubusercontent.com/OmegaMadLab/StartingWithArmTemplates/master/05_DSC_example/DSCResources/ADDomainJoin.ps1.zip",
        "adJoinConfigurationFunction": "ADDomainJoin.ps1\\ADDomainJoin"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/DomainJoin')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
        
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.76",
                "autoUpgradeMinorVersion": false,
                "settings": {
                    "modulesURL": "[variables('adJoinModulesURL')]",
                    "configurationFunction": "[variables('adJoinConfigurationFunction')]",
                    "properties": {
                        "domainName": "[parameters('domainName')]",
                        "adminCreds": {
                            "userName": "[parameters('adminUserName')]",
                            "password": "PrivateSettingsRef:adminPassword"
                        }
                    }
                },
                "protectedSettings": {
                    "items": {
                        "adminPassword": "[parameters('adminPassword')]"
                    }
                }
            }
        }
    ]
}