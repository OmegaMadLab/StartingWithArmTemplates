{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string",
            "metadata": {      
                "description": "Prefix for items naming convention"
            }
        },
        "adminUserName": {
            "type": "string",
            "metadata": {      
                "description": "Local and domain admin username"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {      
                "description": "Local and domain admin password"
            }
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "AD domain name"
            }
        },
        "sqlLoginName": {
            "type": "string",
            "metadata": {
                "description": "SQL Login username"
            }
        },
        "sqlLoginPassword": {
            "type": "securestring",
            "metadata": {      
                "description": "SQL Login password"
            }
        }
    },
    "variables": {
        "sqlConfigModulesURL": "https://raw.githubusercontent.com/OmegaMadLab/StartingWithArmTemplates/master/05_DSC_example/DSCResources/SqlConfig.ps1.zip",
        "SqlDscConfigScript": "SqlConfig.ps1",
        "SqlDscConfigFunction": "SqlServerConfig"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/DomainJoin')]",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.76",
                "autoUpgradeMinorVersion": false,
                "settings": {
                    "configuration": {
                        "url": "[variables('sqlConfigModulesURL')]",
                        "script": "[variables('SqlDscConfigScript')]",
                        "function": "[variables('SqlDscConfigFunction')]"
                    },
                    "configurationArguments": {}
                    },
                    "protectedSettings": {
                    "configurationArguments": {
                        "SysAdminCreds": {
                        "userName": "[parameters('adminUserName')]",
                        "Password": "[parameters('adminPassword')]"
                        },
                        "NewLoginCreds": {
                        "userName": "[parameters('sqlLoginName')]",
                        "Password": "[parameters('sqlLoginPassword')]"
                        }
                    }
                }
            }
        }
    ]
}